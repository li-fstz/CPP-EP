<Window x:Class="CPP_EP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPP_EP" xmlns:ad="http://schemas.xceed.com/wpf/xaml/avalondock" xmlns:s="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" DockPanel.Dock="Top">
                <MenuItem Header="实验项目">
                    <MenuItem Name="itemLab1" Header="1.空表" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab2" Header="2.FIRST 集" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab3" Header="3.FOLLOW 集" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab4" Header="4.预测分析表" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab5" Header="5.提取左因子" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab6" Header="6.消除左递归（无替换）" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab7" Header="7.消除左递归（有替换）" IsCheckable="True" Click="ItemLab_Click"/>
                    <MenuItem Name="itemLab8" Header="8.预测分析方法" IsCheckable="True" Click="ItemLab_Click"/>
                </MenuItem>
                <MenuItem Header="_File">
                    <MenuItem Name="newMenuItem" Header="_New">
                        <MenuItem.Icon>
                            <Image Height="16px" Source="/CPP-EP;component/Images/ImageFileNew.png" Stretch="Uniform" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Name="openMenuItem" Header="_Open...">
                        <MenuItem.Icon>
                            <Image Height="16px" Source="/CPP-EP;component/Images/ImageFileOpen.png" Stretch="Uniform" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Name="closeMenuItem" Header="_Close" />
                    <Separator />
                    <MenuItem Name="saveMenuItem" Header="_Save">
                        <MenuItem.Icon>
                            <Image Height="16px" Source="/CPP-EP;component/Images/ImageFileSave.png" Stretch="Uniform" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Name="saveAsMenuItem" Header="Save _As..." />
                    <MenuItem Name="saveAllMenuItem" Header="Save A_ll">
                        <MenuItem.Icon>
                            <Image Height="16px" Source="/CPP-EP;component/Images/ImageFileSaveAll.png" Stretch="Uniform" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Name="exitMenuItem" Header="E_xit" />
                </MenuItem>
                <MenuItem Header="关于">
                    <MenuItem Name="aboutMenuItem" Header="_About" />
                </MenuItem>
            </Menu>
            <ToolBarPanel Name="toolStrip" HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                <ToolBarTray>
                    <ToolBar Height="32px" ToolBarTray.IsLocked="True">
                        <Button Width="30px" Height="30px" Padding="0px" Name="startButton" Click="startButton_Click"
                                ToolTip="启动" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/play.png" Stretch="Uniform" />
                        </Button>
                        <Button Width="30px" Height="30px" Padding="0px" Name="stopButton" Click="stopButton_Click"
                                ToolTip="停止" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/stop.png" Stretch="Uniform" />
                        </Button>
                        <Button Width="30px" Height="30px" Padding="0px" Name="refButton"
                                ToolTip="重新启动" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/refresh.png" Stretch="Uniform" />
                        </Button>
                        <Button Width="30px" Height="30px" Padding="0px" Name="stepButton" Click="stepButton_Click"
                                ToolTip="逐语句" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/step_into.png" Stretch="Uniform" />
                        </Button>
                        <Button Width="30px" Height="30px" Padding="0px" Name="nextButton" Click="nextButton_Click"
                                ToolTip="逐过程" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/step_over.png" Stretch="Uniform" />
                        </Button>
                        <Button Width="30px" Height="30px" Padding="0px" Name="finishButton" Click="finishButton_Click"
                                ToolTip="跳出" IsEnabled="False">
                            <Image Height="24px" Source="/CPP-EP;component/Images/step_out.png" Stretch="Uniform" />
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </ToolBarPanel>
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DockPanel.Dock="Bottom">
                <StatusBar Name="statusStrip" Height="22px" HorizontalAlignment="Stretch"
                           DockPanel.Dock="Bottom">
                    <StatusBarItem />
                </StatusBar>
                <ad:DockingManager Name="dockPanel">
                    <ad:LayoutRoot>
                        <ad:LayoutPanel Orientation="Horizontal">
                            <ad:LayoutPanel Orientation="Vertical">
                                <ad:LayoutDocumentPane x:Name="documentsRoot" IsMaximized="True" />
                                <ad:LayoutAnchorablePaneGroup DockHeight="200">
                                    <ad:LayoutAnchorablePane>
                                        <ad:LayoutAnchorable Title="编译" ContentId="t1" CanHide="False">
                                            <TextBox Name="buildText" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"></TextBox>
                                        </ad:LayoutAnchorable>
                                        <ad:LayoutAnchorable Title="输出" ContentId="t1" CanHide="False">
                                            <TextBox TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"></TextBox>
                                        </ad:LayoutAnchorable>
                                        <ad:LayoutAnchorable Title="GDB" ContentId="t1" CanHide="False">
                                            <TextBox Name="gdbText" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"></TextBox>
                                        </ad:LayoutAnchorable>
                                    </ad:LayoutAnchorablePane>
                                </ad:LayoutAnchorablePaneGroup>
                            </ad:LayoutPanel>
                            <ad:LayoutAnchorablePaneGroup DockWidth="640">
                                <ad:LayoutAnchorablePane>
                                    <ad:LayoutAnchorable Title="文法" ContentId="t1" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                    <ad:LayoutAnchorable Title="空表" ContentId="t2" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                    <ad:LayoutAnchorable Title="FIRST 集" ContentId="t2" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                    <ad:LayoutAnchorable Title="FOLLOW 集" ContentId="t2" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                    <ad:LayoutAnchorable Title="预测分析表" ContentId="t2" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                    <ad:LayoutAnchorable Title="预测分析方法" ContentId="t2" CanHide="False">
                                        <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                                    </ad:LayoutAnchorable>
                                </ad:LayoutAnchorablePane>
                            </ad:LayoutAnchorablePaneGroup>
                        </ad:LayoutPanel>
                    </ad:LayoutRoot>
                </ad:DockingManager>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
