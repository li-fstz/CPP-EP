<Window x:Class="CPP_EP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPP_EP"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" TabStripPlacement="Bottom">
            <TabItem Header="文法">
                <TextBlock></TextBlock>
            </TabItem>
            <TabItem Header="空表">
                <TextBlock></TextBlock>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Width="3" HorizontalAlignment="Stretch"/>
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="实验">
                <MenuItem Name="menuItem1" Header="1.空表" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem2" Header="2.FIRST 集" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem3" Header="3.FOLLOW 集" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem4" Header="4.预测分析表" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem5" Header="5.提取左因子" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem6" Header="6.消除左递归（无替换）" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem7" Header="7.消除左递归（有替换）" IsCheckable="True" Click="ItemLab_Click"/>
                <MenuItem Name="menuItem8" Header="8.预测分析方法" IsCheckable="True" Click="ItemLab_Click"/>
            </MenuItem>
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Delete"/>
            </MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="View"></MenuItem>
            <MenuItem Header="About"></MenuItem>
        </Menu>
        <ToolBar Grid.Row="1" Grid.Column="0" ToolBarTray.IsLocked="True">
            <Button Content="启动" Click="Button_Click_1"></Button>
            <Button Content="停止" Click="Button_Click_2"></Button>
            <Button Content="重新启动" IsEnabled="False"></Button>
            <Button Content="逐语句" IsEnabled="False"></Button>
            <Button Content="逐过程" IsEnabled="False"></Button>
            <Button Content="跳出" IsEnabled="False"></Button>
        </ToolBar>
        <TabControl Name="tabControl" Grid.Row="2" Grid.Column="0">
        </TabControl>
        <GridSplitter Grid.Row="3" Grid.Column="0" Height="3" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
        <TabControl Grid.Row="4" Grid.Column="0">
            <TabItem Header="编译">
                <TextBlock></TextBlock>
            </TabItem>
            <TabItem Header="输出">
                <TextBlock></TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
